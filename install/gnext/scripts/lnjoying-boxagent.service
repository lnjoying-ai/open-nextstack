[Unit]
Description=Gunicorn instance to serve l3 agent
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
WorkingDirectory=/opt/nextstack
Environment="PATH=/opt/.v3.10/bin:/usr/bin:/usr/sbin"
ExecStart=/opt/.v3.10/bin/boxagent  -C /opt/nextstack/config.box.yml
ExecStop=/usr/bin/kill -9 $MAINPID
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
